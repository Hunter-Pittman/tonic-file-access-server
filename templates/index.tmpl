{{ define "index.tmpl" }}
<head>
    <title>{{ .title }}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>
</head>

<html>
    <style>
        #download_link {
            margin-right: 1em !important;
            text-shadow: 0 0 10px rgba(255,255,255,1) , 0 0 20px rgba(255,255,255,1) , 0 0 30px rgba(255,255,255,1) , 0 0 40px #ff00de , 0 0 70px #ff00de , 0 0 80px #ff00de , 0 0 100px #ff00de;
            -webkit-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1);
            -moz-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1);
            -o-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1);
            transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1);
        }
        #download_link:hover {
            color: #ff0;
            text-shadow: 0 0 10px rgba(255,255,255,1) , 0 0 20px rgba(255,255,255,1) , 0 0 30px rgba(255,255,255,1) , 0 0 40px #00ffff , 0 0 70px #00ffff , 0 0 80px #00ffff , 0 0 100px #00ffff;
        }
        a {
            color: #ff0;
            text-decoration: none;
        }
        a:hover {
            text-decoration: none;
        }
        h1 {
            color: rgb(0 255 169);
        }
        body {
            background: #212529;
        }
        .navbar{
            background:#000;
        }
        .nav-link , .navbar-brand{
            color: #ff0;
            cursor: pointer;
        }
        .nav-link{
            margin-right: 1em !important;
        }
        .navbar-collapse{
        justify-content: center;
        }
        .navbar-toggler{
        background:#fff !important;
        }
        #sizetext {
            size: .5em;
            color: #ff0 !important;
        }
        #datetext {
            size: .5em;
            color: #ff0 !important;
        }
        #namesep {
            border-right: red 2px solid;
            border-style: rounded;
        }
        #sizesep {
            border-right: red 2px solid;

        }
        #datesep {
            border-right: red 2px solid;

        }

    </style>
    <body class="container">
        <nav class="navbar navbar-expand-lg fixed-top">
        <a class="navbar-brand" href="#">
            <img src="../assets/tonic.webp" width="30" height="30" class="d-inline-block align-top" alt="">
        </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-4">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <form action="/upload" method="post" enctype="multipart/form-data">
                                <div>
                                    <label for="file">Choose file to upload</label>
                                    <input type="file" id="file" name="file" multiple/>
                                </div>
                                <div>
                                    <button>Submit</button>
                                </div>
                            </form>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container">
            <div class="col-sm-5" id="namesep">
                <h1>
                    Name:
                </h1>
            </div>
            <div class="col-sm-2" id="sizesep">
                <h1>
                    Size(bytes):
                <h1>
            </div>
            <div class="col-sm-4" id="datesep">
                <h1>
                    Time Uploaded:
                </h1>
            </div>
        </div>


        {{ range $file := .files }}
            <div class="container">
                <div class="col-sm-5">
                    <h1>
                        <a id="download_link" href="/download/{{ .Name }}">{{ .Name }}</a><br>
                    </h1>
                </div>
                <div class="col-sm-2" >
                    <h1 id="sizetext">
                        {{ .Size }}<br>
                    <h1>
                </div>
                <div class="col-sm-4">
                    <h1 id="datetext">
                        {{ .ModTime }}<br>
                    </h1>
                </div>
            </div>
        {{ end }}
        
    </body>
</html>
{{ end }}